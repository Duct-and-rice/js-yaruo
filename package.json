{
  "name": "js-yaruo",
  "version": "1.0.0",
  "description": "A library for Shift_JIS art",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "fix": "tslint --fix .",
    "build": "rollup -c rollup.config.ts"
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.+)$": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/duct-and-rice/js-yaruo.git"
  },
  "keywords": [
    "2ch",
    "asciiart",
    "sjisart",
    "shiftjisart",
    "yaruo"
  ],
  "author": "Duct-and-rice",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/duct-and-rice/js-yaruo/issues"
  },
  "homepage": "https://github.com/duct-and-rice/js-yaruo#readme",
  "dependencies": {
    "canvas": "^2.0.0-alpha.9",
    "is-node": "^1.0.2"
  },
  "devDependencies": {
    "@types/es6-promise": "^3.3.0",
    "@types/jest": "^22.0.1",
    "eslint": "^4.15.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.5.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-typescript": "^0.8.1",
    "jest": "^22.0.4",
    "rollup": "^0.53.3",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.9.0",
    "ts-jest": "^22.0.1",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.6.2",
    "typescript-eslint-parser": "^11.0.0"
  }
}
